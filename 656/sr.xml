<Content type="html"><![CDATA[

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body, html {
      height: 100%;
      margin: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #6aa84f; 
    }

    #buttonContainer {
      text-align: center;
      display: none;
    }

    .button-row {
      display: flex;
      justify-content: center;
      margin-bottom: 10px; 
    }

    .c-button {
      width: 150px;
      height: 30px;
      font-family: impact;
      appearance: none;
      border: 0;
      border-color: #fff;
      border-radius: 5px;
      background: #274e13;
      color: #fff;
      font-size: 16px;
      cursor: pointer;
      margin: 10px; 
      transition: background 0.3s; 
    }

    .c-button:hover {
      background: #468c55; 
    }

    .c-button:focus {
      outline: none;
      box-shadow: 0 0 0 4px #cbd6ee;
    }
  </style>
</head>

<body>
  <div id="buttonContainer">
    <div class="button-row">
      <button class="c-button">VERSION 1</button>
      <button class="c-button">FULLSCREEN 1</button>
    </div>
    <div class="button-row">
      <button class="c-button">VERSION 2</button>
      <button class="c-button">FULLSCREEN 2</button>
    </div>
  </div>

  <script>
    var gameUrls = [
      "https://images-opensocial.googleusercontent.com/gadgets/ifr?url=https://cdn.jsdelivr.net/gh/mind4ur/debugactions@6e97a528bfcdd0623e0cd99ad352baebf47a6b70/sr3d2.xml", 
      "https://images-opensocial.googleusercontent.com/gadgets/ifr?url=https://cdn.jsdelivr.net/gh/mind4ur/debugactions@6e97a528bfcdd0623e0cd99ad352baebf47a6b70/sr3d2.xml", 
      "https://script.google.com/macros/s/AKfycbw5Z-Ryg_JfIIDYH7pzzPKXlr2tN0HCw-tT_ZvxBGDPsDDY41ewPVneVeLzelfpnBab/exec", 
      "https://script.google.com/macros/s/AKfycbw5Z-Ryg_JfIIDYH7pzzPKXlr2tN0HCw-tT_ZvxBGDPsDDY41ewPVneVeLzelfpnBab/exec"  
    ];

    function openGameWindow(gameNumber) {
      return function() {
        var win;
        if (gameNumber === 1 || gameNumber === 3) { 
          window.location.href = gameUrls[gameNumber - 1];
        } else { // Иначе, если выбрана кнопка OLD VERSION
          if (win) {
            win.focus();
          } else {
            win = window.open();
            win.document.body.style.margin = '0';
            win.document.body.style.height = '100vh';
            var iframe = win.document.createElement('iframe');
            iframe.style.border = 'none';
            iframe.style.width = '100%';
            iframe.style.height = '100%';
            iframe.style.margin = '0';
            iframe.src = gameUrls[gameNumber - 1];
            win.document.body.appendChild(iframe);

            var interval = setInterval(function() {
              if (win.closed) {
                clearInterval(interval);
                win = undefined;
              }
            }, 500);
          }
        }
      };
    }

    setTimeout(function() {
      document.getElementById("buttonContainer").style.display = "block";
    }, 2000);

    document.querySelectorAll('.c-button').forEach(function(button, index) {
      button.onclick = openGameWindow(index + 1);
    });
  </script>
</body>
</html>

